<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme Setup -->
    <style name="Base.Theme.CollegeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorPrimaryContainer">@color/primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorSecondaryContainer">@color/secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/onSecondaryContainer</item>

        <!-- Background / Surface -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/onSurface</item>
        <item name="android:textColorSecondary">@color/onSurfaceVariant</item>

        <!-- Custom Button Style -->
        <item name="android:buttonStyle">@style/CollegeAppButton</item>
    </style>

    <!-- Main App Theme -->
    <style name="Theme.CollegeApp" parent="Base.Theme.CollegeApp" />

    <!-- Button Style -->
    <style name="CollegeAppButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:buttonCornerRadius" tools:targetApi="p">20dp</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>
